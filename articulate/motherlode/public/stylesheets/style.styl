/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
//@import url('http://fonts.googleapis.com/css?family=Quicksand')
@import url('http://fonts.googleapis.com/css?family=Delius+Swash+Caps');

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #000//#438eff//#bc0128
background-color = #faf9f0
body-background-color = #e6e6e6

body
  font-family 'Optima'
  background-color body-background-color
  color #444

header
  //font-family 'Quicksand'
  font-family: 'Delius Swash Caps', cursive;
  padding 10px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 500px
  margin 25px auto
  margin-bottom 10px
  overflow hidden

.main-content
  float left
  width 500px

  p
    margin-bottom 20px

.sidebar
  //float left
  //width 200px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 15px
    border 1px solid #ccc
    margin 25px auto
    //margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 1px rgba(#000, 0.7), 0px 6px 0px -10px rgba(#000, 0.1)

    h1
      font-family 'Optima'
      font-weight bold
      margin 4px 10px 4px
      line-height 1.2
      //padding-bottom 4px
      //border-bottom 1px dotted #ddd
      //border-radius 2px 2px 0px 0px
      margin-bottom 4px

      a
        border-bottom 1px dotted
        text-decoration: none;

    h5
      margin 13px 10px 4px
      margin-bottom 4px  


    p
      font-size 13px
      padding 0px 10px
      margin-bottom 4px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  margin-top 10px
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px